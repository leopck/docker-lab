# -*- dockerfile -*-
# Evolution sandboxed
# VERSION       0.1

FROM debian
MAINTAINER Antoine R. Dumont, github.com/ardumont

RUN apt-get update && apt-get install -y evolution evolution-data-server evolution-mapi evolution-ews
RUN useradd -m -G users -s /bin/bash -d /home/user user
RUN apt-get install -y openssh-server
EXPOSE 22

USER user

CMD ["evolution"]
